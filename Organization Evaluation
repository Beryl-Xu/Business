    <script>
        // Language switch function
        function switchLang(lang) {
            const zhElements = document.querySelectorAll('.zh-text');
            const enElements = document.querySelectorAll('.en-text');
            const langBtns = document.querySelectorAll('.lang-btn');
            
            if (lang === 'zh') {
                zhElements.forEach(el => el.style.display = 'block');
                enElements.forEach(el => el.style.display = 'none');
                langBtns[0].classList.add('active');
                langBtns[1].classList.remove('active');
            } else {
                zhElements.forEach(el => el.style.display = 'none');
                enElements.forEach(el => el.style.display = 'block');
                langBtns[0].classList.remove('active');
                langBtns[1].classList.add('active');
            }
        }

        // Score calculation function (simplified logic for demonstration)
        function calculateScore() {
            let module1Score = 0, module2Score = 0, module3Score = 0;

            // Module 1 scoring logic
            const driverCount = document.getElementById('driver-type').selectedOptions.length;
            const strategyAlignment = document.getElementById('strategy-alignment').value.length;
            module1Score = Math.min(driverCount * 2.5, 10) + (strategyAlignment > 50 ? 8 : 5) + (document.getElementById('urgency').value === 'high' ? 8 : 5);
            module1Score = Math.min(module1Score, 26);

            // Module 2 scoring logic
            const existingCoverage = document.getElementById('existing-coverage').value;
            const positionQuantity = document.getElementById('position-quantity').value;
            const levelBasis = document.getElementById('level-basis').value;
            module2Score = (existingCoverage === 'no' ? 10 : 5) + (positionQuantity > 0 ? 10 : 0) + (levelBasis.includes('Tariff') || levelBasis.includes('Senior') || levelBasis.includes('T+') || levelBasis.includes('Management') ? 10 : 5);
            module2Score = Math.min(module2Score, 30);

            // Module 3 scoring logic
            const collabFrequency = document.getElementById('collab-frequency').value.length;
            const shortTermGoal = document.getElementById('short-term-goal').value.length;
            module3Score = (collabFrequency > 0 ? 15 : 5) + (document.getElementById('transition-plan').value.length > 50 ? 14 : 7) + (shortTermGoal > 0 ? 15 : 5);
            module3Score = Math.min(module3Score, 44);

            // Update module scores
            document.getElementById('module1-score').textContent = `当前得分：${module1Score}/26分`;
            document.getElementById('module1-score-en').textContent = `Current Score：${module1Score}/26 points`;
            document.getElementById('module2-score').textContent = `当前得分：${module2Score}/30分`;
            document.getElementById('module2-score-en').textContent = `Current Score：${module2Score}/30 points`;
            document.getElementById('module3-score').textContent = `当前得分：${module3Score}/44分`;
            document.getElementById('module3-score-en').textContent = `Current Score：${module3Score}/44 points`;

            // Total score and feedback
            const totalScore = module1Score + module2Score + module3Score;
            let feedbackZH = '', feedbackEN = '';
            
            if (totalScore >= 80 && module1Score >=15 && module2Score >=15 && module3Score >=15) {
                feedbackZH = '<p class="zh-text"><strong>评估结果：优先处理</strong> - 符合HR COE介入标准，建议提交正式申请。</p>';
                feedbackEN = '<p class="en-text"><strong>Result：Priority Handling</strong> - Meets HR COE intervention criteria; recommend formal submission.</p>';
            } else if (totalScore >=60) {
                feedbackZH = '<p class="zh-text"><strong>评估结果：需优化后重提</strong> - 请根据框架要求补充信息（如战略对齐说明、预算权定义等）。</p>';
                feedbackEN = '<p class="en-text"><strong>Result：Optimization Required</strong> - Supplement information per framework requirements (e.g., strategic alignment, budget authority).</p>';
            } else {
                feedbackZH = '<p class="zh-text"><strong>评估结果：不予受理</strong> - 变革需求合理性不足，建议重新审视业务规划。</p>';
                feedbackEN = '<p class="en-text"><strong>Result：Rejected</strong> - Insufficient rationality; recommend re-evaluating business planning.</p>';
            }

            // Display results
            document.getElementById('module1-result').textContent = module1Score;
            document.getElementById('module2-result').textContent = module2Score;
            document.getElementById('module3-result').textContent = module3Score;
            document.getElementById('total-score').textContent = `<strong>${totalScore}</strong>`;
            document.getElementById('result-feedback').innerHTML = feedbackZH + feedbackEN;
            document.getElementById('result-section').style.display = 'block';

            // Scroll to results
            document.getElementById('result-section').scrollIntoView({ behavior: 'smooth' });
        }

        // Initialize with Chinese language
        switchLang('zh');
    </script>

</body></html>
